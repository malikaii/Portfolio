# Step 1: Use official Node.js image for the build stage
FROM node:18 AS build

# Step 2: Set working directory
WORKDIR /app

# Step 3: Copy package.json and package-lock.json (or yarn.lock) and install dependencies
COPY package*.json ./
RUN npm install

# Step 4: Copy the rest of your app's source code
COPY . .

# Step 5: Build the React app
RUN npm run build

# Step 6: Use Nginx to serve the production build
FROM nginx:alpine

# Step 7: Copy the build output from the build stage to Nginx's public directory
COPY --from=build /app/build /usr/share/nginx/html

# Step 8: Expose port 80 for Nginx
EXPOSE 80

# Step 9: Start Nginx server
CMD ["nginx", "-g", "daemon off;"]
